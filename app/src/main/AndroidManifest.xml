<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rpgcompanion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RPGCompanion">
        <activity
            android:name=".AnotacaoAbertaActivity"
            android:exported="false" />
        <activity
            android:name=".AnotacoesAventuraActivity"
            android:exported="false" />
        <activity
            android:name=".CriacaoFichaActivity"
            android:exported="false" />
        <activity
            android:name=".DadosActivity"
            android:exported="false" />
        <activity
            android:name=".FichaDetalheActivity"
            android:exported="false" />
        <activity
            android:name=".BestiarioActivity"
            android:exported="false" />
        <activity
            android:name=".BestiarioInfoActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>